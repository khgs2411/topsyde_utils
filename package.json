{
  "name": "topsyde-utils",
  "version": "1.0.4",
  "description": "A bundle of TypeScript utility classes and functions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier --cache --write \"**/*.ts\"",
    "lint": "eslint . --ext .ts --cache",
    "generate-indexes": "./scripts/generate-indexes.sh",
    "prebuild": "bun run clean && bun run generate-indexes && bun run format",
    "build": "bun run tsc",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "prepare": "bun run build",
    "release": "./scripts/release.sh"
  },
  "keywords": [
    "typescript",
    "utilities",
    "helpers",
    "functions",
    "error-handling"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topsyde/topsyde-utils.git"
  },
  "bugs": {
    "url": "https://github.com/topsyde/topsyde-utils/issues"
  },
  "homepage": "https://github.com/topsyde/topsyde-utils#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/bun": "^1.2.4",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
